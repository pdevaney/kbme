{{!
    @template totara_core/totara_menu

    Creates the totara menu.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * menuitems Array The menu items

    Example context (json):
    {
        "menuitems": [
            {
                "class_name": "Performance",
                "class_isfirst": false,
                "class_islast": false,
                "class_isselected": true,
                "linktext": "Performance",
                "url": "http://example.com",
                "target": "_self",
                "haschildren": true,
                "children": [
                    {
                        "class_name": "goals",
                        "class_isfirst": true,
                        "class_islast": false,
                        "class_isselected": false,
                        "linktext": "Goals",
                        "url": "http://example.com",
                        "target": "_self",
                        "haschildren": false,
                        "children": []
                    }
                ]
            }
        ]
    }
}}
<ul id="totaramenu">
    {{#menuitems}}<li class="menu-{{class_name}}{{#haschildren}} haschildren{{/haschildren}}{{#class_isfirst}} first{{/class_isfirst}}{{#class_islast}} last{{/class_islast}}{{#class_isselected}} selected{{/class_isselected}}">
        <a target="{{target}}" href="{{url}}">{{{linktext}}}</a>
        {{#haschildren}}
            <ul>
                {{#children}}<li class="menu-{{class_name}}{{#class_isfirst}} first{{/class_isfirst}}{{#class_islast}} last{{/class_islast}}{{#class_isselected}} selected{{/class_isselected}}">
                    <a target="{{target}}" href="{{url}}">{{{linktext}}}</a>
                </li>{{/children}}
            </ul>
        {{/haschildren}}
    </li>{{/menuitems}}
</ul>
{{#js}}
    require(['totara_core/totaramenu', 'core/log'], function(totaraMenu, logging) {
    totaraMenu.setFocus('#totaramenu');
    logging.debug('Totara menu initialised');
    });
{{/js}}
